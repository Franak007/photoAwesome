{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <h1>Liste des cat√©gories</h1>
    {{ form_start(form) }}
    {{ form_row(form.categoryLabel) }}
    <button type="submit">Rechercher</button>
    {{ form_end(form) }}
    <ul>
        {% for category in categories %}
            {#            <li>{{ category.label }}</li> #}
            <li><a href="{{ path('app_category_show', {'id':category.id}) }}">{{ category.label }}</a>
                <br>
                <a href="{{ path('app_category_delete', {'id':category.id}) }}">Supprimer</a>
                <a href="{{ path('app_category_edit', {'id':category.id}) }}">Modifier</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
